
        <h1 class="trendingQ">List of users</h1>


        <div class="main-content">

            <% users.forEach(user => { %>
                <div class="d1">
                    <a class="linkQ" href="/users/<%- user.id %>">
                        <br>
                        <p class="styleT" > <%= user.displayName %></p>
                        <br>
                        <img class="img" src="<%= user.profileImageUrl %>" alt="user profile img">
                        <p><span>number of questions: <%= user.questionCount %> </span></p>
                        <p><span>number of answers: <%= user.answerCount %> </span></p>
                        <p><span>badges awards: gold = <%= user.goldBadges %> | silver =  <%= user.silverBadges %> | bronze = <%= user.bronzeBadges %></span></p>
                    </a>
                </div>
            <% }); %>
        </div>
